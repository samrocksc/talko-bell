# Run the container with `docker run -p 3000:3000 -t talkos`.
FROM docker.io/node:lts-alpine

ENV HOST=0.0.0.0
ENV PORT=3000

WORKDIR /app

RUN addgroup --system talkos && \
          adduser --system -G talkos talkos

COPY dist/apps/talkos talkos/
RUN chown -R talkos:talkos .

# You can remove this install step if you build with `--bundle` option.
# The bundled output will include external dependencies.
RUN npm --prefix talkos --omit=dev -f install

CMD [ "node", "talkos" ]
